{
    "name": "scraper-apis/thomasnet-scraper",
    "description": "PHP Scraper library for fetching supplier data from the ThomasNet Suppliers using an Apify actor",
    "type": "library",
    "license": "MIT",
    "require": {
        "php": "^8.3",
        "guzzlehttp/guzzle": "^7.0"
    },
    "require-dev": {
        "pestphp/pest": "^4.0",
        "laravel/pint": "^1.0",
        "phpstan/phpstan": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "ThomasNetScraper\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ThomasNetScraper\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "pest",
        "cs": "pint --test",
        "cs:fix": "pint",
        "analyse": "phpstan analyse"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
